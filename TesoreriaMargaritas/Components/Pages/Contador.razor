@page "/contador"
@using Microsoft.AspNetCore.Authorization
@using TesoreriaMargaritas.Services
@attribute [Authorize(Roles = "Tesorero, Administrador")]
@rendermode RenderMode.InteractiveServer
@inject TesoreriaService TesoreriaService

<PageTitle>Panel Contador</PageTitle>

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-secondary border-bottom pb-2">
                <i class="bi bi-graph-up"></i> Panel del Contador
            </h2>
            <p class="text-muted">Resumen financiero y herramientas de auditoría.</p>
        </div>
    </div>

    <!-- KPIs -->
    <div class="row mb-5">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title opacity-75">Saldo en Caja (Estimado)</h6>
                    <h3 class="fw-bold">@kpi.SaldoCaja.ToString("C0")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title opacity-75">Ingresos del Mes</h6>
                    <h3 class="fw-bold">@kpi.IngresosMes.ToString("C0")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title opacity-75">Gastos del Mes</h6>
                    <h3 class="fw-bold">@kpi.GastosMes.ToString("C0")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title opacity-75">Pendientes de Cierre</h6>
                    <h3 class="fw-bold">@kpi.PendientesCierre <span class="fs-6">mov.</span></h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Accesos Directos -->
    <div class="row mb-5">
        <h4 class="text-secondary mb-3">Accesos Directos</h4>
        <div class="col-md-6 mb-3">
            <a href="/operaciones/movimientos" class="text-decoration-none">
                <div class="card hover-effect border-info">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-arrow-left-right fs-1 text-info me-3"></i>
                        <div>
                            <h5 class="text-dark mb-0">Consulta de Movimientos</h5>
                            <small class="text-muted">Buscar transacciones históricas</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 mb-3">
            <a href="/operaciones/historial-cierres" class="text-decoration-none">
                <div class="card hover-effect border-secondary">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-clock-history fs-1 text-secondary me-3"></i>
                        <div>
                            <h5 class="text-dark mb-0">Historial de Cierres</h5>
                            <small class="text-muted">Consultar arqueos pasados</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Módulo de Auditoría -->
    <div class="row">
        <div class="col-12">
            <div class="card border-dark shadow">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Auditoría de Pendientes</h5>
                    <a href="/operaciones/auditoria" class="btn btn-sm btn-outline-light">
                        Abrir Módulo Completo <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Gestione, modifique o anule movimientos que aún <strong>no han sido cerrados</strong>.
                        Una vez realizado el cierre, la información es inmutable.
                    </p>
                    <a href="/operaciones/auditoria" class="btn btn-dark">
                        Gestionar Movimientos Pendientes
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-effect:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: all 0.2s;
    }
</style>

@code {
    private ContadorKPI kpi = new ContadorKPI();

    protected override async Task OnInitializedAsync()
    {
        kpi = await TesoreriaService.ObtenerKPIsContadorAsync();
    }
}