@page "/login"
@using TesoreriaMargaritas.Models
@using TesoreriaMargaritas.Services
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using System.ComponentModel.DataAnnotations
@rendermode RenderMode.InteractiveServer
@inject UserService UserService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: var(--tm-bg-light);">
    <div class="card shadow login-card p-4" style="max-width: 400px; width: 100%;">
        <div class="card-body text-center">

            <!-- LOGO -->
            <div class="mb-4">
                <img src="images/logo-responsive-las-margaritas.png" alt="Las Margaritas" class="img-fluid" style="max-height: 100px;">
            </div>

            <h4 class="mb-4 text-secondary">Acceso Tesorería</h4>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-circle-fill"></i> @errorMessage
                </div>
            }

            <EditForm Model="@loginData" OnValidSubmit="HandleLogin" FormName="LoginForm">
                <DataAnnotationsValidator />

                <div class="mb-3 text-start">
                    <label class="form-label fw-bold small text-muted">DOCUMENTO</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-person-fill text-danger"></i></span>
                        <InputText @bind-Value="loginData.Documento" class="form-control" placeholder="Ingrese usuario" />
                    </div>
                    <ValidationMessage For="@(() => loginData.Documento)" />
                </div>

                <div class="mb-4 text-start">
                    <label class="form-label fw-bold small text-muted">CONTRASEÑA</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-lock-fill text-danger"></i></span>
                        <InputText @bind-Value="loginData.Password" type="password" class="form-control" placeholder="******" />
                    </div>
                    <ValidationMessage For="@(() => loginData.Password)" />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg fw-bold">
                        INGRESAR
                    </button>
                </div>
            </EditForm>
        </div>
        <div class="card-footer bg-white border-0 text-center mt-2">
            <small class="text-muted">© @DateTime.Now.Year Las Margaritas</small>
        </div>
    </div>
</div>

@code {
    public class LoginDto
    {
        [Required(ErrorMessage = "El documento es requerido")]
        public string Documento { get; set; } = "";

        [Required(ErrorMessage = "La contraseña es requerida")]
        public string Password { get; set; } = "";
    }

    [SupplyParameterFromForm]
    private LoginDto loginData { get; set; } = new LoginDto();

    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await UserService.RegistrarUsuarioInicialAsync();
    }

    private async Task HandleLogin()
    {
        errorMessage = null;

        var user = await UserService.LoginAsync(loginData.Documento, loginData.Password);

        if (user != null)
        {
            var customProvider = (CustomAuthStateProvider)AuthStateProvider;
            customProvider.MarkUserAsAuthenticated(user);

            if (user.Rol == "Tesorero") NavigationManager.NavigateTo("/tesorero");
            else if (user.Rol == "Contador") NavigationManager.NavigateTo("/contador");
            else NavigationManager.NavigateTo("/");
        }
        else
        {
            errorMessage = "Credenciales incorrectas.";
        }
    }
}